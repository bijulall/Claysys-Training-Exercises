@model IEnumerable<TaskManagementSystem_WebApplication.Models.Clients>

@{
    ViewBag.Title = "GetAllClients";
    Layout = "~/Views/Shared/AdminPage_Layout.cshtml";
}
<div class="mainContent">

    <p class="createButton">
        @Html.ActionLink("Add new  client", "CreateClient")
    </p>
    <h3 class="majorHeading">Client list</h3>
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactMail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactMail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>

                <td>
                    @Html.ActionLink("Edit", "UpdateClient", new { id = item.ClientID }) |
                    @Html.ActionLink("Details", "GetClient", new { id = item.ClientID }) |
                    @Html.ActionLink("Delete", "DeleteClient", new { id = item.ClientID })

                </td>
            </tr>
        }

    </table>
</div>
