@model IEnumerable<TaskManagementSystem_WebApplication.Models.UserTaskList>

@{
    ViewBag.Title = "GetAllTasks";
    Layout = "~/Views/Shared/AdminPage_Layout.cshtml";
}


<div class="largeContent">
    <p class="createButton">
        @Html.ActionLink("Add new task", "CreateTask")
    </p>
    <h3 class="majorHeading">Active tasks</h3>

    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TaskTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignedUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignedUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "UpdateTask", new { id = item.TaskID }) |
                    @Html.ActionLink("Details", "GetTask", new { id = item.TaskID }) |
                    @Html.ActionLink("Delete", "DeleteTask", new { id = item.TaskID })
                </td>

            </tr>
        }

    </table>
</div>